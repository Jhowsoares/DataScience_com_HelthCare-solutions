# %%
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# %%
# Carregar dados
df = pd.read_csv('../data/healthcare_cleaned_expanded.csv')
print("Shape:", df.shape)
print("\nPrimeiras linhas:")
df.head()

# %%
# Informações básicas
print("Informações do dataset:")
print(df.info())
print("\nValores nulos:")
print(df.isnull().sum())

# %%
# Estatísticas descritivas
print("Estatísticas descritivas:")
df.describe()

# %%
# Tratamento de dados categóricos
df['gender'] = df['gender'].map({'Male': 0, 'Female': 1})
df['smoker'] = df['smoker'].map({'No': 0, 'Yes': 1})
df['readmission_risk'] = df['readmission_risk'].map({'Low': 0, 'Medium': 1, 'High': 2})

# %%
# Salvar dados limpos
df_cleaned = df.copy()
df_cleaned.to_csv('../data/healthcare_cleaned.csv', index=False)
print("Dados limpos salvos com sucesso!")