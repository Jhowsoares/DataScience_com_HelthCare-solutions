# %% [markdown]
# # 2. Análise Exploratória de Dados (EDA)
# ## HealthCare Solutions

# %%
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import plotly.express as px

# %%
# Carregar dados limpos
df = pd.read_csv('../data/healthcare_cleaned_expanded.csv')
print("Dataset shape:", df.shape)

# %%
# Configurações de visualização
plt.style.use('default')
sns.set_palette("husl")

# %%
# Distribuição de custos médicos
plt.figure(figsize=(12, 6))

plt.subplot(1, 2, 1)
plt.hist(df['medical_costs'], bins=20, alpha=0.7, color='skyblue')
plt.title('Distribuição de Custos Médicos')
plt.xlabel('Custos (R$)')
plt.ylabel('Frequência')

plt.subplot(1, 2, 2)
plt.boxplot(df['medical_costs'])
plt.title('Boxplot - Custos Médicos')
plt.ylabel('Custos (R$)')

plt.tight_layout()
plt.show()

# %%
# Correlação entre variáveis
plt.figure(figsize=(10, 8))
correlation_matrix = df.corr()
sns.heatmap(correlation_matrix, annot=True, cmap='coolwarm', center=0)
plt.title('Matriz de Correlação - Variáveis do Dataset')
plt.show()

# %%
# Custos por idade e gênero
plt.figure(figsize=(12, 6))

plt.subplot(1, 2, 1)
sns.scatterplot(data=df, x='age', y='medical_costs', hue='gender', alpha=0.7)
plt.title('Custos vs Idade por Gênero')
plt.xlabel('Idade')
plt.ylabel('Custos Médicos (R$)')

plt.subplot(1, 2, 2)
sns.boxplot(data=df, x='readmission_risk', y='medical_costs')
plt.title('Custos por Risco de Readmissão')
plt.xlabel('Risco de Readmissão (0=Low, 1=Medium, 2=High)')
plt.ylabel('Custos Médicos (R$)')

plt.tight_layout()
plt.show()

# %%
# Análise de satisfação
plt.figure(figsize=(10, 6))
satisfaction_counts = df['satisfaction_score'].value_counts().sort_index()
plt.bar(satisfaction_counts.index, satisfaction_counts.values, color='lightgreen', alpha=0.7)
plt.title('Distribuição de Satisfação dos Pacientes')
plt.xlabel('Score de Satisfação (1-5)')
plt.ylabel('Número de Pacientes')
plt.grid(axis='y', alpha=0.3)
plt.show()

# %%
# Insights principais
print("=== INSIGHTS PRINCIPAIS ===")
print(f"Custo médio por paciente: R$ {df['medical_costs'].mean():.2f}")
print(f"Tempo médio de permanência: {df['length_of_stay'].mean():.1f} dias")
print(f"Taxa média de satisfação: {df['satisfaction_score'].mean():.1f}/5")
print(f"Correlação idade-custos: {df['age'].corr(df['medical_costs']):.3f}")